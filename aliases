# Unix
alias tlf="tail -f"
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls -lAh'

alias e="$EDITOR"
alias v="$VISUAL"

# colorize cat output
alias cat="pygmentize -g"

# Projects
alias p="cd /Users/zacholauson/Projects"
alias pp="cd /Users/zacholauson/Projects/Personal"
alias pk="cd /Users/zacholauson/Projects/Kohactive"

# git
alias gs="git status"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bu="bundle update"

# Tests and Specs
alias cuc="bundle exec cucumber"
alias specs="rspec spec/"

# Rails
alias rs="bundle exec rails server"
alias rc="bundle exec rails console"
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"
alias rk="rake"
alias s="rspec"

alias reload="exec $SHELL -l"

alias :q="exit"

# TODO: Try to get away from using this all the time
# alias c="clear"

# tmux
alias rtmux="tmux source-file ~/.tmux.conf"
alias tml="tmux list-sessions"
alias tmk="tmux kill-session -t"
alias tms="tmux switch -t"

# Cloudapp uploader from @holman ~/bin/cloudapp
alias u="cloudapp"
