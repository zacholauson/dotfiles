[core]
  excludesfile = ~/.gitignore
  autocrlf     = input
  ignorecase   = false
[branch]
  autosetuprebase = always
[merge]
  ff = only
[color]
  ui = true
[alias]
  aa     = add --all
  ap     = add --patch
  ca     = commit --amend
  cv     = commit --verbose
  co     = checkout
  st     = status -s
  fa     = fetch --all
  di     = diff
  dc     = diff --cached
  ds     = diff --staged
  staged = diff --staged
  div    = divergence
  run    = !run-command-on-git-revisions
  stats  = !git-summary
  graph  = !git-graph
  undo   = !git-undo
  head   = !git l -1
  h      = !git head
  l      = "!. ~/.githelpers && pretty_git_log"
  r      = !git l -30
  ra     = !git r --all
  la     = !git l --all
  hp     = "!. ~/.githelpers && show_git_head"
[pager]
  show = diff-highlight | less
  diff = diff-highlight | less
